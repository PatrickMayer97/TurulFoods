@model LoginModel
@{
    ViewData["Title"] = "Events";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h4>Login</h4>
</div>
<div asp-validation-summary="All"></div>
<form asp-action="Login" method="post">
    <div>
        <label style="color:ghostwhite" asp-for="Name"></label>
        <input asp-for="Name" />
    </div>
    <div>
        <label style="color:ghostwhite" asp-for="Password"></label>
        <input asp-for="Password" />
    </div>
    <button class="primary hollow button" type="submit">Submit Login</button><br />
    <a asp-action="Register">Register New Account</a><br />
    <a asp-controller="Home" asp-action="Index">Cancel</a>
</form>
